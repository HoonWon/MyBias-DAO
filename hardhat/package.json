{
  "name": "smart-contract",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prettier": "prettier --write './**/*.sol'",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.ts --network mumbai",
    "deploy:test": "npx hardhat run scripts/deploy.ts --network ropsten",
    "playground": "npx hardhat run scripts/playground.ts --network ropsten",
    "clone": "npx hardhat run scripts/clone.ts --network ropsten",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' npx hardhat test",
    "coverage": "NODE_OPTIONS='--max-old-space-size=4096' npx hardhat coverage"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.3",
    "@optionality.io/clone-factory": "^0.2.1",
    "@typechain/ethers-v5": "^8.0.3",
    "@typechain/hardhat": "^3.0.0",
    "dotenv": "^10.0.0",
    "hardhat": "^2.6.8",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "lodash": "^4.17.21",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.9",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "typescript": "^4.5.2"
  }
}
